<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="30 seconds">
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>
      
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--<pattern>combined</pattern>-->
            <pattern>%-5level %logger{0}: %msg%n</pattern>
        </encoder>
    </appender>
      
    <appender name="SERVER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>server_access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>server-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>combined</pattern>
        </encoder>
    </appender>

    <logger name="ch.qos.logback" level="debug">
        <appender-ref ref="SERVER_FILE"/>
    </logger>
    <logger name="com.chariot.syncsort" level="debug">
        <appender-ref ref="SERVER_FILE"/>
    </logger>
    <logger name="org.springframework.web" level="debug">
        <appender-ref ref="SERVER_FILE"/>
    </logger>
    <logger name="org.springframework.beans" level="warn">
        <appender-ref ref="SERVER_FILE"/>
    </logger>
      
    <root level="info">
        <appender-ref ref="SERVER_FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>